<Window x:Class="CustomTheme.Window1" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
        xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking" 
        Title="Window1" Height="300" Width="300">
    <dxdo:DockLayoutManager Name="dockLayoutManager1" FloatingMode="Desktop">
        <dxdo:DockLayoutManager.Resources>
            <ResourceDictionary Source="Hints.xaml" />
        </dxdo:DockLayoutManager.Resources>
        <!-- simple layout -->
        <dxdo:DockLayoutManager.LayoutRoot>
            <dxdo:LayoutGroup Name="Root">
                <dxdo:LayoutPanel Caption="Panel1" />
                <dxdo:LayoutPanel Caption="Panel2" />
            </dxdo:LayoutGroup>
        </dxdo:DockLayoutManager.LayoutRoot>
    </dxdo:DockLayoutManager>
</Window>